<h1>Wip pages</h1>

<%= link_to 'Create New Page', new_page_path, :class => 'btn' %>

<div class="row content-list">
<% @pages.each do |page| %>
<article class="entry-header">
  <h1 class="entry-title"><%= link_to page.title, page %></h1>
  <p class="entry-summary"><%= page.description %></p>
  <nav class="entry-utilities">
    <%= link_to 'Edit', edit_page_path(page) %>
    <%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
  </nav>
</article>
<% end %>
</div>

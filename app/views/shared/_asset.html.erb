<% if is_image(asset.asset_url) %>
  <img src="<%= asset.asset_url %>">
<% elsif is_movie(asset.asset_url) %>
  <video src="<%= asset.asset_url %>" controls>
<% else %>
	<div class="row asset-summary downloads">
  		<a href="<%= asset.asset_url %>" class="btn">Download</a> <%= File.basename asset.asset_url %>
	</div>
<% end %>

<div class="row asset-summary">
  <p><%= asset.description %></p>
</div>

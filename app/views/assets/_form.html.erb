<%= form_for asset, :html => {:multipart => true} do |f| %>
  <% if asset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(asset.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% asset.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row field">
    <img src="<%= asset.asset_url %>">
  </div>
  <div class="row asset field">
    <%= f.text_area :description, :placeholder => 'Add a brief summary for the asset', :id => 'asset-summary' %>
    <div class="row actions">
      <%= link_to 'remove asset', asset, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </div>
  </div>
<% end %>
